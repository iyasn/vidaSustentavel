        <body>
          <div class="formulario">
            <img class="logoformulario" src="images/logoB-.png" alt="Logo">
        
            <form action="/formulariousuario" method="post">
              <div class="form-group">
                <label for="nome">Nome:</label>
                <input type="text" id="nome" name="nome" required>
              </div>
        
              <div class="form-group">
                <label for="telefone">Telefone:</label>
                <input type="text" id="telefone" name="telefone" required>
              </div>
        
              <div class="form-group">
                <label for="email">Email:</label>
                <input type="email" id="email" name="email" required>
              </div>
        
              <div class="form-group">
                <label for="documento">CPF ou CNPJ:</label>
                <input type="text" id="documento" name="documento" required>
              </div>
        
              <div class="form-group">
                <label for="valor">Valor a ser pago:</label>
                <input type="text" id="valor" name="valor" required>
              </div>
        
              <div class="form-group">
                <label for="forma-pagamento">Forma de Pagamento:</label>
                <select id="forma-pagamento" name="formaPagamento" required>
                  <option value="boleto">Boleto</option>
                  <option value="pix">PIX</option>
                  <option value="cartao">Cartão</option>
                </select>
              </div>
        
              <div id="cartao-group" class="form-group" style="display: none;">
                <label for="banco">Banco:</label>
                <input type="text" id="banco" name="banco">
              </div>
        
              <div id="cartao-info" class="form-group" style="display: none;">
                <label for="agencia">Agência:</label>
                <input type="text" id="agencia" name="agencia">
        
                <label for="conta">Conta:</label>
                <input type="text" id="conta" name="conta">
              </div>
        
              <div id="pix-group" class="form-group" style="display: none;">
                <button class="pix-button" type="button">Nosso PIX: 12345654321</button>
              </div>
        
              <div id="boleto-group" class="form-group" style="display: none;">
                <label for="rua">Rua:</label>
                <input type="text" id="rua" name="rua">
        
                <label for="numero">Número da Casa:</label>
                <input type="text" id="numero" name="numero">
        
                <label for="cep">CEP:</label>
                <input type="text" id="cep" name="cep">
              </div>
        
              <div class="form-group">
                <button type="submit">Enviar</button>
              </div>
            </form>
          </div>
        
          <script>
            var formaPagamentoSelect = document.getElementById("forma-pagamento");
            var cartaoGroup = document.getElementById("cartao-group");
            var cartaoInfo = document.getElementById("cartao-info");
            var pixGroup = document.getElementById("pix-group");
            var boletoGroup = document.getElementById("boleto-group");
        
            formaPagamentoSelect.addEventListener("change", function() {
              if (formaPagamentoSelect.value === "cartao") {
                cartaoGroup.style.display = "block";
                cartaoInfo.style.display = "block";
                pixGroup.style.display = "none";
                boletoGroup.style.display = "none";
              } else if (formaPagamentoSelect.value === "pix") {
                cartaoGroup.style.display = "none";
                cartaoInfo.style.display = "none";
                pixGroup.style.display = "block";
                boletoGroup.style.display = "none";
              } else if (formaPagamentoSelect.value === "boleto") {
                cartaoGroup.style.display = "none";
                cartaoInfo.style.display = "none";
                pixGroup.style.display = "none";
                boletoGroup.style.display = "block";
              }
            });
          </script>


